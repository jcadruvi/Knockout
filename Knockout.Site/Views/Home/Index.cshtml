@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="fieldLine">
    <span class="fieldLabel">District: </span>
    <input data-bind="kendoComboBox: { dataTextField: 'Value', dataValueField: 'Key', dataSource: districtOptions.dataSource }" type="text"/>
</div>

<div class="fieldLine">
    <span class="fieldLabel">Retailer: </span>
    <input data-bind="kendoComboBox: { dataTextField: 'Value', dataValueField: 'Key', data: retailerData }" type="text"/>
</div>

<div class="fieldLine">
    <span class="fieldLabel">Add Retailer: </span>
    <input data-bind="value: retailer, valueUpdate: 'afterkeydown'" type="text"/>
    <input class="k-button" data-bind="click: onAddRetailerClick" type="button" value="Add"/>
</div>

<script>
    (function() {
        var viewModel = kendoViewModel();

        ko.applyBindings(viewModel);
    })();
</script>

